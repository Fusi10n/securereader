<?xml version="1.0" encoding="utf-8"?>
<info.guardianproject.bigbuffalo.widgets.AnimatedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false" >

    <TextView
        android:id="@+id/tvSource"
        style="@style/StoryItemShortSourceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|right"
        android:padding="4dp"
        android:text="@string/story_item_short_source"
        android:textAllCaps="true" />

    <info.guardianproject.bigbuffalo.widgets.UpdatingTextView
        android:id="@+id/tvTime"
        style="@style/StoryItemShortTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvSource"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/story_item_short_time" />

    <LinearLayout
        android:id="@+id/column1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvSource"
        android:layout_weight="0.5"
        android:orientation="vertical" >

    </LinearLayout>

</info.guardianproject.bigbuffalo.widgets.AnimatedRelativeLayout>