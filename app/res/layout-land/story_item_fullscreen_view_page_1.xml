<?xml version="1.0" encoding="utf-8"?>
<info.guardianproject.bigbuffalo.widgets.AnimatedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvSource"
        style="@style/StoryItemShortSourceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|right"
        android:padding="4dp"
        android:text="@string/story_item_short_source"
        android:textAllCaps="true" />

    <View
        android:id="@+id/separatorSource"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tvSource"
        android:background="@color/grey_light_medium"
        android:visibility="gone" />

    <info.guardianproject.bigbuffalo.widgets.UpdatingTextView
        android:id="@+id/tvTime"
        style="@style/StoryItemShortTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/separatorSource"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/story_item_short_time" />

    <LinearLayout
        android:id="@+id/llColumns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvSource" >

        <LinearLayout
            android:id="@+id/column1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvSource"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/column2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="30dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

        </LinearLayout>
    </LinearLayout>

</info.guardianproject.bigbuffalo.widgets.AnimatedRelativeLayout>