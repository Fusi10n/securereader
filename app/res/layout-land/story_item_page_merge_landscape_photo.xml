<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/info.guardianproject.yakreader"
    android:id="@+id/llRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical" >

    <View
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />    
    
    <include
        android:id="@+id/layout_source"
        android:layout_width="match_parent"
        android:layout_height="@dimen/source_height"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_center_margin"
        android:layout_marginTop="@dimen/source_top_margin"
        android:layout_toLeftOf="@id/strut"
        layout="@layout/story_item_page_source" />

    <include
        android:id="@+id/ivPhotos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_toRightOf="@id/strut"
        layout="@layout/story_media_content_view" />

        <info.guardianproject.yakreader.widgets.CustomFontTextView
            android:id="@+id/tvTitle"
            style="@style/StoryItemTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivPhotos"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/layout_source"
            android:layout_marginBottom="@dimen/card_bottom_margin"
            android:layout_marginLeft="@dimen/card_left_margin"
            android:layout_marginRight="@dimen/card_center_margin"
            android:layout_marginTop="@dimen/title_top_margin"
            android:layout_toLeftOf="@id/strut"
            android:ellipsize="end"
            android:text="@string/story_item_short_title"
            app:fade_last_line="false" />

    <ViewStub
        android:id="@+id/viewStubTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPhotos"
        android:inflatedId="@+id/svTags"
        android:layout="@layout/story_item_page_tags" />

</merge>