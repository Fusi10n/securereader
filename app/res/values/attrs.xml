<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res/info.guardianproject.bigbuffalo"> 
    
    <attr name="command" format="integer" />
    <attr name="height_inhibitor" format="float" default="0"/>
    <attr name="actionBarMenuIcon" format="reference" />
    <attr name="actionBarMenuIconInset" format="dimension" />
    
    <declare-styleable name="CustomAppTheming">
        <attr name="actionBarThemeColorTitle" format="color"/>
        <attr name="actionBarThemeColorIconTint" format="color"/>
        <attr name="actionBarThemeBackground" format="reference"/>
        <attr name="actionBarThemeItemBackground" format="reference"/>
        <attr name="actionBarThemeButtonBackground" format="reference"/>
    </declare-styleable>
         
    <declare-styleable name="DottedProgressView">
        <attr name="dot_distance" format="integer" />
        <attr name="dot_radius" format="integer" />
        <attr name="dot_color" format="color" />
        <attr name="dot_rim_color" format="color" />
        <attr name="dot_color_current" format="color" />
        <attr name="dot_rim_color_current" format="color" />
        <attr name="dot_total" format="integer" />
    	<attr name="dot_current" format="integer" />
    	<attr name="hide_if_only_one" format="boolean" defaultValue="true" />
    	<attr name="android:gravity" />
    </declare-styleable>
    
    <declare-styleable name="DropdownSpinner">
        <attr name="dropdown_background" format="reference" />
        <attr name="android:divider" />
    </declare-styleable>
    
    <declare-styleable name="CustomFontTextView">
        <attr name="font" format="string" />
        <attr name="linked_text_view" format="reference" />
        <attr name="fade_last_line" format="boolean" defaultValue="false" />
    </declare-styleable>
    
    <declare-styleable name="GroupView">
        <attr name="header_layout" format="reference" />
        <attr name="collapse_layout" format="reference" />
        <attr name="header_text" format="reference" />
        <attr name="header_sub_text" format="reference" />
   	</declare-styleable>
   	
    <declare-styleable name="StoryItemPageView">
        <attr name="show_author" format="boolean" default="true"/>
        <attr name="show_content" format="boolean" default="true"/>
        <attr name="show_source" format="boolean" default="true"/>
    </declare-styleable>
    
    <declare-styleable name="StoryMediaContentView">
        <attr name="show_placeholder" format="boolean" default="false"/>
        <attr name="height_inhibitor" />
    </declare-styleable>
       
    <declare-styleable name="HeightLimitedLinearLayout">
        <attr name="height_limit" format="float" default="0"/>
    </declare-styleable>    
</resources>
